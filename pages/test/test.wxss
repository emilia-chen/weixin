.log-list {
  display: flex;
  flex-direction: column;
  padding: 40rpx;
}
.log-item {
  margin: 10rpx;
}

.test{
  color:red
}
.item
{
    border: 1px solid #000;
    font-size:12pt;
}

.controls {
  position: relative;
  top: 50%;
  height: 50px;
  margin-top: -25px;
  display: flex;
}
.play,.pause,.time {
  flex: 1;
  height: 100%;
}
.time {
  text-align: center;
  background-color: rgba(0, 0, 0, .5);
  color: white;
  line-height: 50px;
}
.img {
  width: 80rpx;
  height: 80rpx;
  margin: 5px auto;
}


.scroll-view-item{
  width:200rpx;
  height:200rpx
}
